{
  "name": "strimzi-ui",
  "description": "Strimzi UI provides a way for managing Strimzi and Kafka clusters (+ other components) deployed by it using a graphical user interface.",
  "repository": "https://github.com/strimzi/strimzi-ui.git",
  "homepage": "https://github.com/strimzi/strimzi-ui#readme",
  "license": "Apache-2.0",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@patternfly/react-core",
      "**/@patternfly/react-core/**",
      "**/patternfly"
    ]
  },
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "start:carbon": "lerna run start --scope=@strimzi-ui/ui-carbon",
    "start:patternfly": "lerna run start --scope=@strimzi-ui/ui-patternfly",
    "start:patternfly-federated": "lerna run start --scope=@strimzi-ui/ui-patternfly-federated",
    "test": "echo \"TODO: Add tests\" && exit 0 "
  },
  "devDependencies": {
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-i18next": "^5.0.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^3.22.1",
    "prettier": "^2.1.2",
    "typescript": "^4.1.3",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.1.0"
  },

  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
